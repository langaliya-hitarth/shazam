{
  // Window settings
  "window.newWindowDimensions": "inherit",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0.75,

  // Breadcrumbs settings
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.icons": true,

  // Workbench settings
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Halcyon",
  "workbench.editorAssociations": {
    "*.fit": "default"
  },
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.renderIndentGuides": "none",

  // Terminal settings
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font Mono'",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.smoothScrolling": true,

  // Editor settings
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono'",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.lightbulb.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.verticalScrollbarSize": 6,
  "editor.smoothScrolling": true,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword",
          "variable.language",
          "entity.other.attribute-name.html",
          "entity.other.attribute-name",
          "keyword.control",
          "storage.type",
          "comment",
          "comment.block",
          "comment.line"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.wordSeparators": "`-~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,

  // File settings
  "files.associations": {
    "*.sqlbook": "sql",
    "*.ndjson": "jsonl",
    "*.dbclient-js": "javascript",
    ".php_cs": "php",
    ".php_cs.dist": "php",
    ".env*": "dotenv"
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Language specific settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Emmet settings
  "emmet.includeLanguages": {
    "blade": "html",
    "vue-html": "html",
    "vue": "html",
    "react": "html",
    "javascript": "html"
  },
  "emmet.syntaxProfiles": {},

  // Extension settings
  "material-icon-theme.hidesExplorerArrows": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "extensions.ignoreRecommendations": true,
  "vscode_custom_css.imports": [
    "file:///Users/hitarth/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.4/dist/updateHandler.js"
  ],

  // Git settings
  "git.autofetch": true,
  "scm.diffDecorations": "all",

  // Misc settings
  "cursor.aipreview.enabled": true,
  "cSpell.userWords": [
    "autoincrement",
    "codegen",
    "emojify",
    "fulfillable",
    "gelly",
    "Ghostty",
    "hitarth",
    "Keka",
    "langchain",
    "metafields",
    "myshopify",
    "ngrok",
    "nodenext",
    "praella",
    "Qdrant",
    "rcopy",
    "rollbar",
    "tseslint",
    "vite"
  ],
  "database-client.autoSync": true,
  "dotenv.enableAutocloaking": false,
  "notebook.output.wordWrap": true,
  "problems.decorations.enabled": false,
  "projectManager.git.baseFolders": ["~/Workspace"],
  "security.workspace.trust.untrustedFiles": "open",
  "svg.preview.transparencyGrid": true,
  "typescript.preferences.importModuleSpecifier": "relative"
}
